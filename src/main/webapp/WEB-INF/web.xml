<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
  <display-name>Archetype Created Web Application</display-name>

  <!-- this cannot be set using 'extends Application' / @ApplicationPath yet :( -->
  <servlet>
    <servlet-name>io.github.bmhm.shiro.jaxrs.login.JaxRsShiroApplication</servlet-name>
    <multipart-config>
      <location>/tmp</location>
      <max-file-size>35000000</max-file-size>
      <max-request-size>218018841</max-request-size>
      <file-size-threshold>0</file-size-threshold>
    </multipart-config>
  </servlet>

  <servlet-mapping>
    <servlet-name>io.github.bmhm.shiro.jaxrs.login.JaxRsShiroApplication</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <session-config>
    <tracking-mode>COOKIE</tracking-mode>
  </session-config>
</web-app>
